<Window x:Class="StaticRessources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StaticRessources" 
        xmlns:clr="clr-namespace:System;assembly=System.Runtime"
        mc:Ignorable="d"
        Title="Hauptfenster" 
        Height="450" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Window.Resources>
        <clr:String x:Key="randomString">Hello Universe</clr:String>
        <clr:String x:Key="randomString2">Welcome!!</clr:String>
    </Window.Resources>
    <StackPanel
        Margin="15"
        Background="LawnGreen">
        <TextBlock Text="{StaticResource randomString}" 
                   FontSize="60"
                   HorizontalAlignment="Center"
                   >
        </TextBlock>
        <TextBlock Text="{StaticResource randomString2}"
                   FontSize="60"
                   HorizontalAlignment="Center"
                   >
        </TextBlock>
    </StackPanel>
</Window>
